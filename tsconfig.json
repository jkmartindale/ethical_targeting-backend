{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "outDir": "ts-out/",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["src/**/*.ts", "src/**/*.css", "canister_ids.json"],
  "exclude": ["**/*.test.ts"]
}
